rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated and matches the userId
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Wallets collection
    match /wallets/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Transfers collection (uses userId)
    match /transfers/{transferId} {
      allow read: if resource.data.userId == request.auth.uid;
      allow create: if request.resource.data.userId == request.auth.uid;
    }

    // Exchanges collection (uses userId)
    match /exchanges/{exchangeId} {
      allow read: if resource.data.userId == request.auth.uid;
      allow create: if request.resource.data.userId == request.auth.uid;
    }

    // Deposits collection (uses uid)
    match /deposits/{depositId} {
       allow read: if resource.data.uid == request.auth.uid;
       allow create: if request.resource.data.uid == request.auth.uid;
    }

    // Withdrawals collection (uses uid)
    match /withdrawals/{withdrawalId} {
       allow read: if resource.data.uid == request.auth.uid;
       allow create: if request.resource.data.uid == request.auth.uid;
    }

    // Trades collection (uses uid)
    match /trades/{tradeId} {
       allow read: if resource.data.uid == request.auth.uid;
       allow create: if request.resource.data.uid == request.auth.uid;
       allow update: if resource.data.uid == request.auth.uid;
    }
    
    // Catch-all: Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
