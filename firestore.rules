rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated and matches the userId
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    // Reads the user document to check the 'role' field
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow write: if isOwner(userId) || isAdmin();
      allow read: if isOwner(userId) || isAdmin() || (resource.data.referredBy == request.auth.uid);
    }

    // Wallets collection
    match /wallets/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Transfers collection
    match /transfers/{transferId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow create: if request.resource.data.userId == request.auth.uid || isAdmin();
    }

    // Exchanges collection
    match /exchanges/{exchangeId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow create: if request.resource.data.userId == request.auth.uid || isAdmin();
    }

    // Deposits collection
    match /deposits/{depositId} {
       allow read: if resource.data.uid == request.auth.uid || isAdmin();
       allow create: if request.resource.data.uid == request.auth.uid || isAdmin();
       allow update: if isAdmin();
    }

    // Withdrawals collection
    match /withdrawals/{withdrawalId} {
       allow read: if resource.data.uid == request.auth.uid || isAdmin();
       allow create: if request.resource.data.uid == request.auth.uid || isAdmin();
       allow update: if isAdmin();
    }

    // Trades collection
    match /trades/{tradeId} {
       allow read: if resource.data.uid == request.auth.uid || isAdmin();
       allow create: if request.resource.data.uid == request.auth.uid || isAdmin();
       allow update: if resource.data.uid == request.auth.uid || isAdmin();
    }
    
    // Commissions collection
    match /commissions/{commissionId} {
        allow read: if resource.data.agentId == request.auth.uid || isAdmin();
        allow write: if isAdmin();
    }

    // Verification Codes collection
    match /verificationCodes/{codeId} {
        allow read, write: if request.auth != null;
    }
    
    // Catch-all: Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
