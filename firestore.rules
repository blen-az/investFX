rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated and matches the userId
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    // Reads the user document to check the 'role' field
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is an agent
    function isAgent() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agent';
    }

    // Users collection
    match /users/{userId} {
      allow create, delete: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      // Allow agents to update trade control for their referred users
      allow update: if isAgent() && 
                      resource.data.referredBy == request.auth.uid && 
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['tradeControl']);
      allow read: if isOwner(userId) || isAdmin() || (resource.data.referredBy == request.auth.uid) || (userId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.referredBy);
    }

    // Wallets collection
    match /wallets/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      // Allow agents to read wallets (to display balances of referred users)
      allow read: if isAgent();
    }

    // Transfers collection
    match /transfers/{transferId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow create: if request.resource.data.userId == request.auth.uid || isAdmin();
    }

    // Exchanges collection
    match /exchanges/{exchangeId} {
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow create: if request.resource.data.userId == request.auth.uid || isAdmin();
    }

    // Deposits collection
    match /deposits/{depositId} {
       allow read, list: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin() || isAgent());
       allow create: if request.auth != null && (request.resource.data.uid == request.auth.uid || isAdmin());
       allow update: if isAdmin();
    }

    // Withdrawals collection
    match /withdrawals/{withdrawalId} {
       allow read, list: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin() || isAgent());
       allow create: if request.auth != null && (request.resource.data.uid == request.auth.uid || isAdmin());
       allow update: if isAdmin();
    }

    // Trades collection
    match /trades/{tradeId} {
       allow read, list: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin() || isAgent());
       allow create: if request.resource.data.uid == request.auth.uid || isAdmin();
       allow update: if resource.data.uid == request.auth.uid || isAdmin();
    }
    
    // Commissions collection
    match /commissions/{commissionId} {
        allow read: if resource.data.agentId == request.auth.uid || isAdmin();
        allow write: if isAdmin();
    }

    // Chats collection - Allow participants to read/write
    match /chats/{chatId} {
      allow create: if request.auth != null && (request.resource.data.userId == request.auth.uid || request.resource.data.agentId == request.auth.uid || isAdmin());
      allow read, update: if request.auth != null && (resource.data.userId == request.auth.uid || resource.data.agentId == request.auth.uid || isAdmin());
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/chats/$(chatId)).data.userId == request.auth.uid || 
          get(/databases/$(database)/documents/chats/$(chatId)).data.agentId == request.auth.uid ||
          isAdmin()
        );
      }
    }

    // Verification Codes collection
    match /verificationCodes/{codeId} {
        allow read, write: if request.auth != null;
    }
    
    // Settings collection (platform-wide settings like deposit addresses)
    match /settings/{settingId} {
        // Admins can read and write all settings
        allow read, write: if isAdmin();
        // All authenticated users can read platform settings (for deposit addresses)
        allow read: if request.auth != null && settingId == 'platform';
    }
    
    // Catch-all: Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
